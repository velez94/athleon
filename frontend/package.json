{
  "name": "athleon-frontend",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@aws-amplify/ui-react": "^6.5.1",
    "@tanstack/react-query": "^5.90.8",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-virtual": "^3.0.1",
    "aws-amplify": "^6.9.0",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.2",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.1.2",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test start http://localhost:3000 cypress",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "eject": "react-scripts eject",
    "deploy:s3": "aws s3 sync build/ s3://scoringames-frontend-development --delete --profile labvel-dev",
    "invalidate:cloudfront": "aws cloudfront create-invalidation --distribution-id E1W3VWMRM7GPNN --paths '/*' --profile labvel-dev"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.1",
    "cypress": "^13.16.1",
    "eslint": "^9.15.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "react-scripts": "^5.0.1"
  },
  "overrides": {
    "typescript": "^5.9.3",
    "ajv": "^6.12.6",
    "ajv-keywords": "^3.5.2",
    "schema-utils": "^3.3.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
