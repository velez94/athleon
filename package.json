{
  "name": "athleon-platform",
  "version": "1.0.0",
  "scripts": {
    "build:layer": "cd layers/athleon-shared && npm install --production",
    "cleanup:packages": "bash scripts/cleanup-lambda-packages.sh",
    "deploy": "npm run build:layer && npm run cdk:deploy",
    "cdk:deploy": "if [ -n \"$CI\" ]; then cdk deploy --require-approval never; else cdk deploy --profile labvel-dev --require-approval never; fi",
    "deploy:fast": "cdk deploy  --require-approval never --hotswap",
    "test": "cd lambda && ./test-all.sh"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.222.0",
    "constructs": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "aws-cdk": "^2.100.0",
    "esbuild": "^0.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
