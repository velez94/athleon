{
  "name": "athleon-platform",
  "version": "1.0.0",
  "scripts": {
    "build:layer": "cd layers/athleon-shared && npm install --production",
    "cleanup:packages": "bash scripts/cleanup-lambda-packages.sh",
    "deploy": "npm run build:layer && npm run cdk:deploy",
    "diff": "npm run build:layer && npm run cdk:diff",
    "cdk:deploy": "if [ -n \"$CI\" ]; then cdk deploy --all --require-approval never; else cdk deploy --all --profile labvel-dev --require-approval never; fi",
    "cdk:diff": "if [ -n \"$CI\" ]; then cdk diff --all; else cdk diff --all --profile labvel-dev; fi",
    "deploy:fast": "cdk deploy  --all --require-approval never --hotswap",
    "deploy:frontend": "npm run generate:config && cd frontend && npm run build && npm run deploy:s3 && npm run invalidate:cloudfront",
    "generate:config": "./scripts/generate-frontend-config.sh",
    "test": "cd lambda && ./test-all.sh"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.926.0",
    "@aws-sdk/client-dynamodb": "^3.926.0",
    "@aws-sdk/lib-dynamodb": "^3.926.0",
    "aws-cdk-lib": "^2.222.0",
    "constructs": "^10.4.3"
  },
  "devDependencies": {
    "@aws-cdk/assertions": "^1.203.0",
    "@aws-sdk/client-cloudformation": "^3.935.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "aws-cdk": "^2.100.0",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.19.0",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
